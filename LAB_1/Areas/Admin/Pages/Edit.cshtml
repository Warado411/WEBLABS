@page "{id:int}"
@model WEB.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";    
}

<h1>Edit</h1>

<h4>Good</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Good.Id" />
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Good.Image))
                {
                    <img src=~/Images/@Model.Good.Image
                           alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Good.Name" class="control-label"></label>
                <input asp-for="Good.Name" class="form-control" />
                <span asp-validation-for="Good.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Good.Description" class="control-label"></label>
                <input asp-for="Good.Description" class="form-control" />
                <span asp-validation-for="Good.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Good.Count" class="control-label"></label>
                <input asp-for="Good.Count" class="form-control" />
                <span asp-validation-for="Good.Count" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="Good.SectionId" class="control-label"></label>
                <select asp-for="Good.SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                <span asp-validation-for="Good.SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {    
    <script src="~/lib/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init()
        })
    </script>
}